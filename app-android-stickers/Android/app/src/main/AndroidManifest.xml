<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".StickerApplication"
        android:allowBackup="false"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning,UnusedAttribute">


        <activity
            android:name="com.whatsapp.sticker.ui.activity.EntryActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.whatsapp.sticker.ui.activity.feature.original.StickerPackListActivity" />
        <activity
            android:name="com.whatsapp.sticker.ui.activity.feature.original.StickerPackDetailsActivity"
            android:parentActivityName="com.whatsapp.sticker.ui.activity.feature.original.StickerPackListActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whatsapp.sticker.ui.activity.feature.original.StickerPackListActivity" />
        </activity>
        <activity
            android:name="com.whatsapp.sticker.ui.activity.feature.original.StickerPackInfoActivity"
            android:label="@string/title_activity_sticker_pack_info"
            android:parentActivityName="com.whatsapp.sticker.ui.activity.feature.original.StickerPackDetailsActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whatsapp.sticker.ui.activity.feature.original.StickerPackDetailsActivity" />
        </activity>
        <activity android:name="com.whatsapp.sticker.ui.activity.feature.implementation.NewStickerPackActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.whatsapp.sticker.ui.activity.feature.implementation.NewStickerPackActivity" />
        </activity>

        <provider
            android:name="com.whatsapp.sticker.data.provider.StickerContentProvider"
            android:authorities="${contentProviderAuthority}"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.whatsapp.sticker.READ" />
    </application>

    <uses-permission
        android:name="android.permission.READ_MEDIA_VISUAL_USER_SELECTED"
        tools:ignore="ManifestOrder" />
    <uses-permission
        android:name="android.permission.READ_MEDIA_IMAGES"
        tools:ignore="ManifestOrder,SelectedPhotoAccess" />
    <uses-permission
        android:name="android.permission.READ_MEDIA_VIDEO"
        tools:ignore="SelectedPhotoAccess,WrongManifestParent" />

    <!-- to be able to query the whitelist status in WhatsApp
     https://developer.android.com/training/basics/intents/package-visibility#package-name -->
    <queries>
        <package android:name="com.whatsapp" />
        <package android:name="com.whatsapp.w4b" />
    </queries>
</manifest>
