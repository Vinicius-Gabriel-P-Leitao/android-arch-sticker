<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/tv_permission_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingBottom="16dp"
        android:text="Nome do pacote"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Nome do pacote">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_user_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/catppuccin_text"
            android:textColorHint="@color/catppuccin_subtext0" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/grant_permission_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/catppuccin_surface0"
            android:contentDescription="Buscar imagens ou videos na galeria."
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_image_gallery" />

        <Button
            android:id="@+id/cancel_permission_button"
            style="@style/SurfaceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/catppuccin_surface0"
            android:text="Cancelar"
            android:textColor="@color/catppuccin_text" />

    </LinearLayout>
</LinearLayout>
